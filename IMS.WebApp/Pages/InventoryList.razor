@page "/inventories"
<h3>Inventory List</h3>

<br/>
<ViewInventoriesComponent OnSearchInventories = "OnSearchInventories"></ViewInventoriesComponent>

@if(listInventory != null) {
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var inv in listInventory) {
                    <tr>
                        <td>@inv.InventoryName</td>
                        <td>@inv.Quantity</td>
                        <td>@inv.Price.ToString("c")</td>
                        <td>
                            <button class="btn btn-light" type="submit">Edit</button>
                        </td>
                    </tr>
                }
        </tbody>
        
    </table>
}

@code{

    private List<Inventory>? listInventory;

    private void OnSearchInventories(List<Inventory> inventories)
    {
        this.listInventory = inventories;
    }
}